<div class="row">
  <div class="col-sm-12">
    <div class="jumbotron">
      <div class="row">
        <div class="col-sm-6">
          <h1>Burgers!</h1>
        </div>

        <div class="col-sm-6">
          <h2>Add a Burger</h2>
          <form class="create-form">

            <div class="form-group">
              <label for="burg">Burger Name:</label>
              <input type="text" id="burg" name="name">
            </div>

            <div class="form-group">
              <label for="burg-img">Burger Image Link:</label>
              <input type="text" id="burg-img" name="image">
            </div>

            <div class="form-group">
              <label for="eaten">Eaten?</label><br>
              <input type="radio" name="eaten" value="1"> Eaten!<br>
              <input type="radio" name="eaten" value="0" checked> Not Eaten
            </div>

            <button type="submit">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

