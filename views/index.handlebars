<div class="row">
  <div class="col-sm-6">
    <h2>Burgers that are not Eaten!</h2>
    {{!-- <ul> --}}
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burger-block eaten=true}}
    {{/unless}}
    {{/each}}
    {{!-- </ul> --}}
  </div>

  <div class="col-sm-6">
    <h2>Burgers that are Eaten!</h2>
    {{!-- <ul> --}}
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
    {{!-- </ul> --}}
  </div>
</div>